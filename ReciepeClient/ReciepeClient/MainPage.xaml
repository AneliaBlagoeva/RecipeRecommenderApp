<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ReciepeClient"
             x:Class="ReciepeClient.MainPage">

    <StackLayout>
        <Label TextColor="White" Text="Enter type of meal" FontAttributes="Bold" FontSize="30" />
        <Entry Text="{Binding MealType}" TextColor="Silver" Placeholder="Breakfast, Snack, Lunch, Dinner" PlaceholderColor="Silver" />

        <Label TextColor="White" Text="Enter key word one" FontAttributes="Bold" FontSize="30" />
        <Entry Text="{Binding KeyOne}" TextColor="Silver" Placeholder="Type ingridient one" PlaceholderColor="Silver" />

        <Label TextColor="White" Text="Enter key word two" FontAttributes="Bold" FontSize="30" />
        <Entry Text="{Binding KeyTwo}" TextColor="Silver" Placeholder="Type ingridient two" PlaceholderColor="Silver" />

        <Label TextColor="White" Text="Enter key word three" FontAttributes="Bold" FontSize="30" />
        <Entry Text="{Binding KeyThree}" TextColor="Silver" Placeholder="Type ingridient three" PlaceholderColor="Silver" />

        <Button Text="Влизане" TextColor="White" Clicked="OnLoginClicked" BackgroundColor="#f50057" HeightRequest="50"></Button>

    </StackLayout>
</ContentPage>
